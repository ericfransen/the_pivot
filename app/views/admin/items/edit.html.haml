.container
  = form_for [:admin, @item] do |f|
    %ul
      - @item.errors.full_messages.each do |error|
        %li= error
    %p
      = f.label :title
      %br/
      = f.text_field :title
    %p
      = f.label :description
      %br/
      = f.text_area :description
    %p
      = f.label :price
      %br/
      = f.text_field :price
    %p
      %img{src: "#{@item.item_images.first.image_file_name}"}
      %br/
      = f.file_field :image
    %p
      = f.submit