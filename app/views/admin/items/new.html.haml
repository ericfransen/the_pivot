.container
  = form_for [:admin, @item] do |f|
    %ul
      - @item.errors.full_messages.each do |error|
        %li= error
    %p
      = f.label :title
      %br/
      = f.text_field :title
    %p
      = f.label :description
      %br/
      = f.text_area :description
    %p
      = f.label :price
      %br/
      = f.text_field :price
    %p
      = f.label :people_per_unit
      %br/
      = f.text_field :people_per_unit
    %p
      = f.label :bathroom
      %br/
      = f.text_field :bathroom
    %p
      = f.label :image
      %br/
      = f.file_field :image
    %p
      = f.submit "Create Listing"
