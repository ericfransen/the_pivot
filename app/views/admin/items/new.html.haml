.container
  .row.col-lg-6.col-lg-offset-3
    %h2.form-signin-heading Create a New Listing.
    = form_for [:admin, @item] do |f|
      - if @item.errors.any?
        %ul#errors
          - @item.errors.full_messages.each do |error|
            %li= error
      .form-group
        = f.text_field :title, class: "form-control", placeholder: "Listing Title"
        %br/
        = f.text_area :description, class: "form-control", placeholder: "Listing Description"
        %br/
        = f.text_field :price, class: "form-control", placeholder: "Price Per Night"
        %br/
        = f.text_field :people_per_unit, class: "form-control", value: "People Per Unit"
        %br/
        = f.text_field :bathroom, class: "form-control", value: "Bathroom Type: Private or Shared"
        %br/
        = f.submit "Create Listing", class: "btn btn-large btn-block btn-primary"
