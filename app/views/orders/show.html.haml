.container
  .panel.panel-default
    %h1.panel-heading Your Booking Requests:
    .panel-body
      %p Please glance over your booking requests. Tweak 'em, or proceed to confirm and make requests.
      = flash[:toomany]
      %table.table.table-striped
        %thead
          %tr
            %th Listing Name
            %th Description
            %th Daily Rate
            %th Nights
            %th Dates
            %th
            %th Subtotal
        %tbody
        -if order.empty?
          %tr You don't have any items in your cart!
        -else
          -order.items.each do |item|
            %tr
              %td #{item.title}
              %td #{item.description}
              %td $#{item.price_for_humans}
              %td #{order_item(item).quantity}
              
              %td= button_to "Remove", delete_item_order_path(order, item_id: item.id), class: "btn btn-danger"
              %td $#{quantity_price_for_humans(item)}
    #order-total
      %h3.text-muted.pull-right= "Booking Subtotal: $#{order.total_for_humans}"


-if signed_in?
  -unless order.total == 0|| order.empty?
    .container
      .row.pull-right
        %ul.nav.nav-pills
          %li.active
            = link_to "Proceed to Booking Summary", confirm_path
-else
  .container
    .col-lg-5-offset-3.pull-right
      %h5.alert.alert-warning You'll need to log in or sign up to complete your order.
  .container
    .col-lg-5-offset-3.pull-right
      %ul.nav.nav-pills
        %li.active
          %a{href: login_path} Login
        %li.active
          %a{href: signup_path} Signup
