.container
  = form_for @user do |f|
    %ul
      - @user.errors.full_messages.each do |error|
        %li= error
    %p
      = f.label :first_name
      %br/
      = f.text_field :first_name
    %p
      = f.label :last_name
      %br/
      = f.text_field :last_name
    %p
      = f.label :city
      %br/
      = f.text_area :city
    %p
      = f.label :state
      %br/
      = f.text_field :state
    %p
      %br/
      Password fields can't be blank here.
      %br/
      %br/
    %p
      = f.submit