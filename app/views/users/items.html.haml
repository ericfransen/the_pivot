.container
  .user-listings-container
    -if host? @user
      .create-listing-btn= link_to "Create New Listing", new_item_path, role: "button", :class => "btn btn-primary btn-lg btn-block new-listing"
    -@items.each do |item|
      %img{src: "#{item.item_images.first.image(:large)}"}
      .caption.caption-user-listings
        %h3= link_to "#{item.title}", item_path(item)
        -unless host? @user
          = button_to "Book it!", add_item_order_path(order, item_id: item.id), class: "thumbnail-btn btn btn-primary"
        -if host? @user
          = link_to "Edit Listing", edit_item_path(item), class: "thumbnail-btn btn btn-primary"
