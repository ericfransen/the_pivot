.container
  .row.col-lg-6.col-lg-offset-3
    %h2.form-signin-heading Join Today.
    = form_for(@user, html: { class: 'form-signin' }) do |f|
      - if @user.errors.any?
        %ul#errors
          - @user.errors.full_messages.each do |error|
            %li= error
      .form-group
        = f.text_field :first_name, class: "form-control", placeholder: "first name"
        %br/
        = f.text_field :last_name, class: "form-control", placeholder: "last name"
        %br/
        = f.text_field :email, class: "form-control", placeholder: "email address"
        %br/
        = f.text_field :city, class: "form-control", placeholder: "city"
        %br/
        = f.text_field :state, class: "form-control", placeholder: "state"
        %br/
        = f.text_field :password, class: "form-control", placeholder: "password", type: "password"
        %br/
        = f.text_field :password_confirmation, class: "form-control", placeholder: "password confirmation", type: "password"
        %br/
        = f.submit "Create my account", class: "btn btn-large btn-block btn-primary", href: "new_user_path"
