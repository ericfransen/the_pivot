.container
  .profile-container
    .profile-photo-container
      =image_tag @user.avatar.url(:medium), class: "profile-photo"
    .profile-info
      =@user.first_name
      =@user.last_name
      %br/
      =@user.city
      =@user.state
      %br/
    .member-since
      %strong Member since:
      %br/
      =@user.created_at.strftime("%B %d, %Y")
    .profile-items-title
      %strong= @user.first_name
      %strong>'s Listings
    .profile-items
      -if @user.items.any?
        -@user.items.each do |item|
          .div=link_to item.title, item_path(item)
      -else
        %p
          No listings yet!