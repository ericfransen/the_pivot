.container
  = form_for @item do |f|
    %ul
      - @item.errors.full_messages.each do |error|
        %li= error
    %p
      = f.label :title
      %br/
      = f.text_field :title
    %p
      = f.label :description
      %br/
      = f.text_area :description
    %p
      = f.label :price
      %br/
      = f.text_field :price
    %p
      %img{src: "#{@item.image_file_name}", width: "242", height: "242"}
      %br/
      = f.file_field :image
    %br/
    %p
      Add an availability:
    %br/
    %p
      = f.submit