
#sidebar.sidebar-offcanvas.no-gutter{:role => "navigation"}
  .list-group
    %a.list-group-item.active Special Categories
    -@special_categories.each do |category|
      -unless category.items.empty?
        %a.list-group-item{:href => category_path(category)}= category.name

    .container-fluid
      .row
        %ul.nav.nav-sidebar
          %li.active
            %a{:href => "#"} Location
          %li
            %a{:href => "#"} Price
          %li
            %a{:href => "#"} Available Dates
          %li
            %a{:href => "#"} People per Unit
          %li
            %a{:href => "#"} Private Room/Shared Room/Couch
          %li
            =link_to "Shared/Private Bath", items_path
      %ul.pagination
        %li
          %a{:href => "#"} «
        %li
          %a{:href => "#"} 1
        %li
          %a{:href => "#"} 2
        %li
          %a{:href => "#"} 3
        %li
          %a{:href => "#"} 4
        %li
          %a{:href => "#"} »

.content

  #googleMap{:style => "width:100%;height:300px;"}

  .listings
    .each_listing
      -@items.each do |item|
        %tr
          .thumbnail.col-lg-3

            %img{src: "#{item.image_file_name}"}
            .caption
              %h3= link_to "#{item.title}", item_path(item)
              %p $ #{item.price_for_humans}
              = button_to "Book it!", add_item_order_path(order, item_id: item.id), class: "thumbnail-btn btn btn-primary"

      .row
        .col-lg-12



      // each listing
      .col-lg-3
        %img




